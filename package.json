{
  "name": "atat",
  "version": "1.1.0",
  "author": "Sergey Golub",
  "license": "MIT",
  "description": "Fast and simple template engine",
  "keywords": [
    "fast",
    "simple",
    "template",
    "atat",
    "templating"
  ],
  "repository": "https://github.com/sgolub/atat",
  "main": "lib/index.js",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "nyc mocha ./test/**/*.ts",
    "lint": "tslint --project tsconfig.json ./src/**/*.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "nyc": {
    "all": true,
    "check-coverage": true,
    "branches": 70,
    "lines": 80,
    "functions": 80,
    "statements": 80,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.12",
    "@types/simple-mock": "^0.8.1",
    "expect.js": "^0.3.1",
    "husky": "^3.0.8",
    "jshint": "^2.10.2",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "simple-mock": "^0.8.0",
    "source-map-support": "^0.5.13",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  }
}
